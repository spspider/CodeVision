Timer_LCD++;
Timer_read_adc_1++;
if(Timer_read_adc_1==50){
Timer_read_adc_2++;
Timer_read_adc_1=0;
}


if (Temp<STemp){
PORTD|=0b00100000;
}
if (Temp>STemp){
PORTD&=~0b00100000;
}
if ((Temp<Temp_min)&&(Temp!=0.00)){
Temp_min=Temp;
}
//Temp_min
//Temp_count=Temp;
//unsigned char
